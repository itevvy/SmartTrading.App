@page "/settings"

<div class="container mt-4 pb-5">
    <h3 class="fw-bold mb-4">⚙️ 시스템 통합 설정</h3>

    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
        <h5 class="fw-bold text-primary mb-3"><i class="bi bi-shield-lock me-2"></i>공통 설정</h5>
        <div class="mb-3">
            <label class="form-label fw-bold">투자 환경</label>
            <div class="form-check form-switch fs-5">
                <input class="form-check-input" type="checkbox" @bind="_isVirtual" id="vSwitch">
                <label class="form-check-label" for="vSwitch">@(_isVirtual ? "모의투자 모드" : "실전투자 모드")</label>
            </div>
        </div>
        <div>
            <label class="form-label fw-bold">Gemini AI API Key</label>
            <input type="password" class="form-control" @bind="_geminiKey" placeholder="Gemini API 키 입력" />
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4 border-start border-danger border-5">
        <h5 class="fw-bold text-danger mb-3"><i class="bi bi-currency-dollar me-2"></i>KIS 실전투자 API 키</h5>
        <div class="mb-3">
            <label class="form-label">App Key</label>
            <input type="password" class="form-control" @bind="_kisRealAppKey" />
        </div>
        <div class="mb-0">
            <label class="form-label">App Secret</label>
            <input type="password" class="form-control" @bind="_kisRealSecret" />
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4 border-start border-success border-5">
        <h5 class="fw-bold text-success mb-3"><i class="bi bi-test-front me-2"></i>KIS 모의투자 API 키</h5>
        <div class="mb-3">
            <label class="form-label">App Key</label>
            <input type="password" class="form-control" @bind="_kisVirtualAppKey" />
        </div>
        <div class="mb-0">
            <label class="form-label">App Secret</label>
            <input type="password" class="form-control" @bind="_kisVirtualSecret" />
        </div>
    </div>

    <div class="d-grid">
        <button class="btn btn-dark btn-lg rounded-pill" @onclick="SaveSettings">모든 설정 안전하게 저장</button>
    </div>
</div>