@page "/"

<div class="dashboard-wrapper">
    @if (!SettingsSvc.IsVirtual)
    {
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="index-card kospi">
                    <div class="label">KOSPI</div>
                    @if (_kospi != null)
                    {
                        <div class="price">@_kospi.Price</div>
                        <div class="change @GetColorClass(_kospi.ChangeDir)">
                            @GetSign(_kospi.ChangeDir) @_kospi.Change (@_kospi.ChangeRate%)
                        </div>
                    }
                    else
                    {
                        <div class="loading-text">KOSPI 지수 로딩 중...</div>
                    }
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="index-card kosdaq">
                    <div class="label">KOSDAQ</div>
                    @if (_kosdaq != null)
                    {
                        <div class="price">@_kosdaq.Price</div>
                        <div class="change @GetColorClass(_kosdaq.ChangeDir)">
                            @GetSign(_kosdaq.ChangeDir) @_kosdaq.Change (@_kosdaq.ChangeRate%)
                        </div>
                    }
                    else
                    {
                        <div class="loading-text">KOSDAQ 지수 로딩 중...</div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary border-0 shadow-sm mb-4 p-4" role="alert">
            <div class="d-flex align-items-center">
                <div class="me-3 fs-2">💡</div>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">모의투자 모드 이용 중</h5>
                    <p class="mb-0 text-muted">한국투자증권 모의투자 서버는 시장 지수(KOSPI/KOSDAQ) 데이터를 제공하지 않습니다. 실전 모드에서 확인 가능합니다.</p>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card p-4 bg-white border-0 shadow-sm rounded-4">
                <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-rocket-takeoff me-2"></i>빠른 실행</h5>
                <div class="d-flex flex-wrap gap-3">
                    <a href="chart-test" class="btn btn-dark btn-lg px-4 rounded-pill">
                        <i class="bi bi-graph-up-arrow me-2"></i>실시간 차트
                    </a>
                    <a href="account" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                        <i class="bi bi-wallet2 me-2"></i>자산 현황
                    </a>
                    <a href="settings" class="btn btn-outline-primary btn-lg px-4 rounded-pill">
                        <i class="bi bi-gear me-2"></i>보안 설정
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* 전체 배경 및 여백 설정 */
    .dashboard-wrapper {
        padding: 25px;
        background-color: #f4f6f9;
        min-height: 100vh;
    }

    /* 지수 카드 디자인 */
    .index-card {
        background: #ffffff;
        padding: 35px 25px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.03);
        text-align: center;
        border: 1px solid rgba(0,0,0,0.02);
    }

        .index-card .label {
            font-size: 0.95rem;
            color: #adb5bd;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 15px;
        }

        .index-card .price {
            font-size: 3rem;
            font-weight: 850;
            color: #212529;
            margin-bottom: 10px;
            letter-spacing: -1.5px;
        }

        .index-card .change {
            font-size: 1.2rem;
            font-weight: 600;
        }

    /* 상승/하락 컬러 시스템 */
    .text-up {
        color: #f22c3d !important;
    }
    /* 상승: 한국형 Red */
    .text-down {
        color: #0066ff !important;
    }
    /* 하락: 한국형 Blue */

    .loading-text {
        color: #dee2e6;
        font-size: 0.9rem;
        padding: 20px 0;
    }

    /* 애니메이션 효과 */
    .index-card {
        transition: all 0.3s ease;
    }

        .index-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.07);
        }
</style>