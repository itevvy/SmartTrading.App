@page "/"

<div class="dashboard-wrapper">
    @if (!SettingsSvc.IsVirtual)
    {
        <div class="alert alert-dark border-0 shadow-sm mb-4 d-flex justify-content-between align-items-center rounded-4 p-3 animate-fade-in">
            <div class="d-flex align-items-center">
                <div class="mode-indicator real me-3"></div>
                <div>
                    <h5 class="fw-bold mb-0 text-white">실전 투자 서비스 접속 중</h5>
                    <small class="text-white-50">Koreainvestment Real-time Server</small>
                </div>
            </div>
            <span class="badge rounded-pill bg-danger px-3 py-2">LIVE</span>
        </div>

        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="index-card kospi">
                    <div class="label">KOSPI</div>
                    @if (_kospi != null)
                    {
                        <div class="price">
                            @(decimal.TryParse(_kospi.Price, out var kVal) ? kVal.ToString("N2") : _kospi.Price)
                        </div>
                        <div class="change @GetColorClass(_kospi.ChangeDir)">
                            @GetSign(_kospi.ChangeDir) @_kospi.Change (@_kospi.ChangeRate%)
                        </div>
                    }
                    else
                    {
                        <div class="loading-text">KOSPI 지수 로딩 중...</div>
                    }
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="index-card kosdaq">
                    <div class="label">KOSDAQ</div>
                    @if (_kosdaq != null)
                    {
                        <div class="price">
                            @(decimal.TryParse(_kosdaq.Price, out var kVal) ? kVal.ToString("N2") : _kosdaq.Price)
                        </div>
                        <div class="change @GetColorClass(_kosdaq.ChangeDir)">
                            @GetSign(_kosdaq.ChangeDir) @_kosdaq.Change (@_kosdaq.ChangeRate%)
                        </div>
                    }
                    else
                    {
                        <div class="loading-text">KOSDAQ 지수 로딩 중...</div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-light border-0 shadow-sm mb-4 d-flex justify-content-between align-items-center rounded-4 p-4 animate-fade-in">
            <div class="d-flex align-items-center">
                <div class="mode-indicator virtual me-3"></div>
                <div>
                    <h5 class="fw-bold mb-1 text-success">모의 투자 모드 이용 중</h5>
                    <p class="mb-0 text-muted small">한국투자증권 모의 서버는 지수(KOSPI/KOSDAQ) 데이터를 제공하지 않습니다.</p>
                </div>
            </div>
            <div class="fs-2">🚀</div>
        </div>
    }
    <div class="row">
        <div class="col-12">
            <div class="card p-4 bg-white border-0 shadow-sm rounded-4">
                <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-rocket-takeoff me-2"></i>빠른 실행</h5>
                <div class="d-flex flex-wrap gap-3">
                    <a href="chart-test" class="btn btn-dark btn-lg px-4 rounded-pill">
                        <i class="bi bi-graph-up-arrow me-2"></i>실시간 차트
                    </a>
                    <a href="account" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                        <i class="bi bi-wallet2 me-2"></i>자산 현황
                    </a>
                    <a href="settings" class="btn btn-outline-primary btn-lg px-4 rounded-pill">
                        <i class="bi bi-gear me-2"></i>보안 설정
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* 전체 배경 및 컨테이너 */
    .dashboard-wrapper {
        padding: 25px;
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    /* 지수 카드 디자인 */
    .index-card {
        background: #ffffff;
        padding: 30px 25px;
        border-radius: 24px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.02);
        text-align: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(0,0,0,0.03);
    }

        .index-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        }

        .index-card .label {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: 800;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .index-card .price {
            font-size: 2.8rem;
            font-weight: 900;
            color: #212529;
            margin-bottom: 8px;
            letter-spacing: -1px;
        }

    /* 상승/하락 컬러 (한국형) */
    .text-up {
        color: #e83e8c !important;
    }
    /* 상승: Pink-Red */
    .text-down {
        color: #0d6efd !important;
    }
    /* 하락: Blue */

    /* 모드 인디케이터 */
    .mode-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

        .mode-indicator.real {
            background-color: #ff4d4d;
            box-shadow: 0 0 10px #ff4d4d;
        }

        .mode-indicator.virtual {
            background-color: #28a745;
            box-shadow: 0 0 10px #28a745;
        }

    /* 애니메이션 */
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>