@inherits LayoutComponentBase

<div class="page">
    @* 상단 바: 로고, 메뉴, 상태 배지 *@
    <header class="header-bar px-4 shadow-sm">
        @* 1. 로고 영역 *@
        <div class="header-left">
            <span class="fs-4 fw-bold text-white">SmartTrading</span>
        </div>

        @* 2. 메뉴 영역 (중복 제목 제거됨) *@
        <nav class="header-center">
            <NavMenu />
        </nav>

        @* 3. 상태 표시 영역 (디자인 강화) *@
        <div class="header-right">
            <div class="mode-status-container">
                @if (SettingsSvc.IsVirtual)
                {
                    @* 💡 [변경] 녹색 바탕에 흰색 글씨로 시인성 극대화 *@
                    <span class="badge rounded-pill bg-success text-white px-3 py-2 shadow-sm">
                        <i class="bi bi-shield-fill me-1"></i> 모의투자
                    </span>
                }
                else
                {
                    <span class="badge rounded-pill bg-danger text-white px-3 py-2 animate-pulse shadow-sm">
                        <i class="bi bi-lightning-fill me-1"></i> 실전투자
                    </span>
                }
            </div>
        </div>
    </header>

    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>